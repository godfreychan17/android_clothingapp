<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#FFF">

    <ImageView
        android:id="@+id/ProductItem_Thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ProductItem_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        android:textColor="#000"
        android:textSize="@dimen/product_grid_font_size"
        app:layout_constraintTop_toBottomOf="@id/ProductItem_Thumbnail" />


    <TextView
        android:id="@+id/ProductItem_Price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textColor="#000"
        android:textSize="@dimen/product_grid_font_size"
        app:layout_constraintTop_toBottomOf="@id/ProductItem_Title" />


</androidx.constraintlayout.widget.ConstraintLayout>